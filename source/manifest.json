{
  "name": "Tab Archive",
  "version": "2020.11.28",
  "offline_enabled": true,
  "description": "An extension to close your tabs and uploads what pages they are on to the cloud.",
  "manifest_version": 2,
  "minimum_chrome_version": "74",
  "applications": {
    "gecko": {
      "id": "extension@tab-archive.app",
      "strict_min_version": "67.0"
    }
  },
  "icons": {
    "128": "icon.png"
  },
  "permissions": ["alarms", "identity", "storage", "tabs"],
  "options_ui": {
    "open_in_tab": true,
    "page": "options.html"
  },
  "background": {
    "persistent": false,
    "scripts": ["browser-polyfill.min.js", "background.js"]
  },
  "oauth2": {
    "client_id": "172305384164-btta42bf23h342eo59p5h9r3gdrhckcj.apps.googleusercontent.com",
    "scopes": [
      "openid",
      "https://www.googleapis.com/auth/userinfo.profile",
      "https://www.googleapis.com/auth/userinfo.email"
    ]
  }
}
